# Copy this file to `.env` and replace placeholder values.

# Security
JWT_SECRET=change-me-to-a-strong-random-secret

# External APIs
WEATHER_API_KEY=your-weather-api-key

# SMTP (for alerting/reporting emails)
SMTP_SERVER=smtp.example.com
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=your-smtp-password

# Infrastructure credentials
# These override the defaults in compose if set.
POSTGRES_PASSWORD=postgres
REDIS_PASSWORD=redis

# Notes:
# - docker compose will automatically load variables from a `.env` in the same directory.
# - After creating `.env`, re-run `docker compose up -d` to apply.

