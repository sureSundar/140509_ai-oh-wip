# RetailAI Production Environment Configuration
# DO NOT COMMIT TO VERSION CONTROL - Add to .gitignore

# Database Configuration
POSTGRES_PASSWORD=SecurePostgresPassword123!
DATABASE_URL=postgresql://postgres:SecurePostgresPassword123!@postgres:5432/retailai

# Redis Configuration
REDIS_PASSWORD=SecureRedisPassword123!
REDIS_URL=redis://:SecureRedisPassword123!@redis:6379

# JWT Security
JWT_SECRET=SecureJWTSecret123ThisShouldBe64CharactersLongForProductionUse!

# External API Keys
WEATHER_API_KEY=your_weather_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration for Alerts
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@retailai.com
SMTP_PASSWORD=your_smtp_password_here

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_key_here

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Application Settings
ENVIRONMENT=production
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1,retailai.com,*.retailai.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=retailai-production-data
AWS_REGION=us-east-1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30